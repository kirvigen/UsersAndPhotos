<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.kirvigen.usersphoto.Utils.OutlineAndShadowView
        android:elevation="5dp"
        android:outlineSpotShadowColor="#1E000000"
        android:id="@+id/rounded"
        android:translationZ="10dp"
        android:background="@drawable/rounded_shape"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/error_dialog"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/ethernet_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/refresh"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/refresh"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"
            android:layout_below="@+id/image"
            android:text="sdsdfsdfsdfsdf sd fsdfs dfsd f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.kirvigen.usersphoto.Utils.OutlineAndShadowView>
</RelativeLayout>